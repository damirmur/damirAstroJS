<!DOCTYPE html>
<html>

<head>
    <%- include("partials/head.ejs") %>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>

<body>

    <h1 class="title">
        <%=title %>
    </h1>

    <div class="content">
        <form id="form">
            <div class="form-row">
              <div class="form-group col-md-6">
                <label>Latitude (decimal)</label>
                <input class="form-control" id="latitude" name="latitude" type="number" step="any" min="-90" max="90" value="42.37"></input>
              </div>
              <div class="form-group col-md-6">
                <label>Longitude (decimal)</label>
                <input class="form-control" id="longitude" name="longitude" type="number" step="any" min="-180" max="180" value="-71.11"></input>
              </div>
            </div>
            <div class="form-group">
              <label>Date of birth</label>
              <input class="form-control" id="date" name="date" type="date" value="1981-07-13"></input>
            </div>
            <div class="form-group">
              <label>Local Time of birth</label>
              <input class="form-control" id="time" name="time" type="time" value="11:22:00"></input>
            </div>
            <div class="form-group">
              <label>Language</label>
              <select id="language-select"></select>
            </div>
            <div class="row">
              <div class="col-6">
                <div class="form-group">
                  <label>Zodiac System:</label>
                  <select id="zodiacSystem"></select>
                </div>
                <div class="form-group">
                  <label>House System:</label>
                  <select id="houseSystem"></select>
                </div>
                <div class="form-group">
                  <label>Aspect Levels:</label>
                  <div>
                    <label for ="aspect-level-major">
                      Major
                      <input id="aspect-level-major" type="checkbox" checked>
                    </label>
                    <label for="aspect-level-minor">
                      Minor
                      <input id="aspect-level-minor" type="checkbox">
                    </label>
                  </div>
                </div>
              </div>
              <div class="col-6">
                <div class="form-group">
                  <label>Aspect Orbs:</label>
                  <div class="row">
                    <div class="col-6">
                      <label>Major Aspects</label>
                      <div id="major-aspect-inputs">

                      </div>
                    </div>
                    <div class="col-6">
                      <label>Minor Aspects</label>
                      <div id="minor-aspect-inputs">

                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>

    </div>
    <button onclick="window.history.back()" class="btn btn-primary">Go Back</button>
    <%- include("partials/footer.ejs") %>
</body>
<html>